            margin-left: 10%;
            color: rgb(1, 105, 1);
        }
        
        .table {
            background-color: white;
            border-collapse: collapse;
            margin: 25px 0;
            font-size: 0.9em;
            font-family: sans-serif;
            min-width: 400px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
            overflow: hidden;
        }
        
        .table thead tr {
            background-color: rgb(66, 219, 66);
            color: #ffffff;
            text-align: center;
        }
        
        .table th,
        .table td {
            padding: 10px 13px;
        }
        
        .table tbody tr {
            border-bottom: 1px solid #dddddd;
        }
        
        .table tbody tr:nth-of-type(even) {
            background-color: rgb(66, 219, 66);
            color: #ffffff;
        }
        
        .table tbody tr:nth-of-type(even) a {
            color: #ffffff;
        }
        
        .table tbody tr:last-of-type {
            border-bottom: 2px solid green;
        }
        
        #img {
            width: 30%;
            height: auto;
