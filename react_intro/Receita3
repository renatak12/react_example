<body>

    <div id="app">

    </div>

    <script src="libs/react.js"></script>
    <script src="libs/react-dom.js"></script>
    <script src="libs/babel.js"></script>

    <script type="text/babel">

        const Titulo = ({titulo}) => { 
            return (
                <h1 id="titulo"> {titulo} </h1>
            ) 
        }; 
        
        const Imagem = () => { 
            return (
                <img src="https://c.tenor.com/tiq9yy-0Fp4AAAAC/drink-pour.gif" id="img" alt="Drink Pour GIF" /> 
            ) 
        }; 
            
        const TabelaBebidas = () => { 
            return (
                <div id="app">
                    <Titulo titulo="Tabela de Cana" />
                    <table id="tabela" class='table'>
                        <thead>
                            <tr id="cabecalho"></tr>
                        </thead>

                        <tbody id="conteudo">
                        </tbody>
                    </table>
                    <Imagem/>
                </div>
            ) 
        }; 
        
        ReactDOM.render( 
            <TabelaBebidas/> 
            , 
            document.getElementById('app') 
        ); 
        
        const valCabecalhos = ["Nome", "Marca","Origem"]; 
        
        const MontaCabecalho = (cabecalhos) => { 
            let tam = cabecalhos.length; 
            let result = ''; 
            for(let i=0; i<tam; i++){ 
                result +=` <th>${cabecalhos[i]}</th>` 
            } 
            return (result) 
        }; 
            
        let textCabecalho = MontaCabecalho(valCabecalhos);
        document.getElementById('cabecalho').innerHTML = textCabecalho; 
        
        const valConteudos = [["Havana", "Engenho Anísio Santiago", "Minhas Gerais"], ["Extrema",
            "Fazenda Extrema", "Pureza"], ["Samanaú", "Engenho Samanaú","Caicó"], ["Jureminha", "Engenho Serra da Jurema", "Guarabira"], ["Triunfo", "Engenho Triunfo", "Areia"]]; 
            
        const MontaValores = (conteudos) => { 
            let tam = conteudos.length; 
            let result = ''; 

            for(let i=0; i<tam; i++){ 
                let tam1=conteudos[i].length; 
                result +='<tr>' ; 
                for(let j=0; j<tam1; j++){ 
                    result +=` <th>${conteudos[i][j]}</th>` 
                } 
                result += '</tr>'; 
            } 
            result += '</tr>'; 
            return (result)   
        }; 

        let textConteudo = MontaValores(valConteudos); 
        document.getElementById('conteudo').innerHTML = textConteudo;

    </script>
</body>

